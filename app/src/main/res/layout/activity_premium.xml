<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/view_padding">

                <ImageView
                    android:id="@id/iPremiumHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="@dimen/view_padding"
                    android:src="@mipmap/ic_lock_black_48dp" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:padding="@dimen/view_padding">

                    <TextView
                        android:id="@id/tPremiumTitle"
                        style="@style/StandardTextViewTitleStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:singleLine="true"
                        android:text="@string/unlimited_services" />

                    <TextView
                        android:id="@id/tPremiumMessage"
                        style="@style/StandardTextView3rdLevelStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:text=""
                        android:textStyle="bold" />

                    <TextView
                        android:id="@id/tPremiumDetail"
                        style="@style/StandardTextView3rdLevelStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/vPremium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_500_standard_drawable"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/view_padding">

                <ImageView
                    android:id="@id/iPremiumControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:padding="@dimen/view_padding"
                    android:src="@mipmap/ic_verified_user_white_18dp" />

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical"
                    android:padding="@dimen/view_padding">

                    <TextView
                        android:id="@id/tPremiumControlTitle"
                        style="@style/GenericWhiteTextViewTitleStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:singleLine="true"
                        android:text="@string/go_premium_be_happy" />

                    <TextView
                        android:id="@id/tPremiumControlMessage"
                        style="@style/GenericWhiteTextView3rdLevelStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:text="@string/go_premium_one_purchase_detail"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@id/tPremiumControlDetail"
                        style="@style/GenericWhiteTextView3rdLevelStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:text="@string/go_premium_one_purchase_note" />

                    <TextView
                        android:id="@id/tPremiumControlAction"
                        style="@style/GenericWhiteTextViewTitleStyle"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/module_padding_small"
                        android:text="@string/loading" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>